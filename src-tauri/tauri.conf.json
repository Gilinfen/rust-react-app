{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "rust-react",
    "version": "0.0.0"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.glinfen.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../pythonrc", "../settings.json"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "visible": false,
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "title": "rust-react",
        "width": 800,
        "height": 600
      },
      {
        "label": "loading",
        "decorations": false,
        "url": "assets/loading.html",
        "transparent": true,
        "width": 100,
        "height": 100
      }
    ]
  }
}
